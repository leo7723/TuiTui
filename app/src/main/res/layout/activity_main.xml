<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.netplus.leo.tuitui.MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/tool_bar"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/fragment_container">
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
        <com.ogaclejapan.arclayout.ArcLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="32dp"
            app:arc_color="#4D000000"
            app:arc_axisRadius="170dp"
            app:arc_freeAngle="false"
            app:arc_reverseAngle="false"
            app:arc_origin="bottom|right"
            android:id="@+id/arc_layout"
            app:arc_radius="0dp">
            <com.netplus.leo.tuitui.view.CircleButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/company_fragment_button"
                app:arc_origin="center"
                android:gravity="center"
                app:cb_color="@color/blue"/>
            <com.netplus.leo.tuitui.view.CircleButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/datui_fragment_button"
                app:arc_origin="center"
                android:gravity="center"
                app:cb_color="@color/blue"/>
            <com.netplus.leo.tuitui.view.CircleButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/personal_fragment_button"
                app:arc_origin="center"
                android:gravity="center"
                app:cb_color="@color/blue"/>
        </com.ogaclejapan.arclayout.ArcLayout>
    </FrameLayout>
    <com.netplus.leo.tuitui.view.CircleButton
        android:id="@+id/fab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cb_color="@color/orange"
        app:cb_pressedRingWidth="8dip"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="10dp"/>


</FrameLayout>
